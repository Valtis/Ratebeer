<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @beer_club.name %>
</p>

<p>
  <strong>Founded:</strong>
  <%= @beer_club.founded %>
</p>

<p>
  <strong>City:</strong>
  <%= @beer_club.city %>
</p>

<p>
  <strong>Members:</strong>
  <ul>
  <% @beer_club.members.each do |m| %>
    <li><%= link_to m.username, m %></li>
  <% end  %>
  </ul>
</p>

<% if current_user_is_member_of_club(@beer_club) %>

    <%= form_for(@membership, method: "delete") do |f| %>
        <%= f.hidden_field :beer_club_id %>
        <%= f.submit class:"btn btn-danger",  value: "End the membership" %>
    <% end %>

<% else %>
    <%= form_for(@membership) do |f| %>
        <%= f.hidden_field :beer_club_id %>
        <%= f.submit class:"btn btn-primary", value: "Join this club" %>
    <% end %>

<% end %>
<br/>
<%= edit_and_destroy_buttons(@beer_club) %>
</br>
<%= link_to 'Back', beer_clubs_path %>
