<p id="notice"><%= notice %></p>

<p>
  <strong>Username:</strong>
  <%= @user.username %> has made <%= @user.ratings.count %> ratings with average score of <%= @user.average_rating %>
</p>


<% if not @user.ratings.empty? %>
<p><strong>Ratings</strong></p>
<ul>
  <% @user.ratings.each do |rating| %>
      <li> <%= rating %>
        <%if current_user == rating.user %>
          <%= link_to 'delete', rating, method: :delete, data: { confirm: 'Are you sure?' } %>
        <% end %>
      </li>
  <% end %>
</ul>

<% end %>

<p>
  <strong>Member of <%= pluralize @user.beer_clubs.count, 'club' %>:</strong>
<ul>
  <% @user.beer_clubs.each do |c| %>
      <li><%= link_to c.name, c %></li>
  <% end  %>
</ul>
</p>


<% if @user == current_user %>
  <%= link_to 'Edit', edit_user_path(@user) %> |
  <%= link_to 'Destroy', @user, method: :delete, data: { confirm: 'Are you sure?' } %> |
<% end %>

<%= link_to 'Back', users_path %>
