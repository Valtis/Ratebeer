<p id="notice"><%= notice %></p>

<h1>Listing Memberships</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>User</th>
      <th>Beer club</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @memberships.each do |membership| %>
      <tr>
        <td><%= membership.user.username %></td>
        <td><%= membership.beer_club.name %></td>
        <td><%= link_to 'Show', membership %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Membership', new_membership_path, class:"btn btn-primary"  if current_user %>
