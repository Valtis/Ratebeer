<h2>List of ratings</h2>


<p>Number of ratings: <%= @ratings.count %></p>
<table class="table table-hover">
  <thead>
  <tr>
    <th>Rating</th>
    <th>Rater</th>
  </tr>
  </thead>

  <tbody>

  <% @ratings.each do |rating| %>
      <tr>
          <th> <%= rating %></th>
          <th><%= link_to rating.user.username, rating.user  %> </th>
      </tr>
  <% end %>
  </tbody>
</table>

<p>
  <%= link_to 'Create a new rating', new_rating_path, class:"btn btn-primary" if current_user %>
</p>