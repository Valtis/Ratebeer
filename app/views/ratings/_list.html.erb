<table class="table table-hover">
  <thead>
  <tr>
    <th><%= name %></th>
    <th>Average rating</th>
  </tr>
  </thead>

  <tbody>

  <% items.each do |item| %>
      <tr>
        <th> <%= link_to item, item %></th>
        <th><%= item.average_rating %></th>
      </tr>
  <% end %>
  </tbody>
</table>